<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spadestack.nsuonline">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:label="NSU ONLINE"
        android:roundIcon="@mipmap/logo_circle_burned"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main_page" />
        <activity android:name=".Activity_erm"
                  android:screenOrientation="landscape"/>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Course" />
        <activity android:name=".Developer"></activity>
    </application>

</manifest>